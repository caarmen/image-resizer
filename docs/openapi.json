{"openapi":"3.0.2","info":{"title":"Image resizer","description":"Api to reisze an image","version":"0.0.7"},"paths":{"/resize":{"get":{"summary":"Resize","description":"Endpoint to resize an image.\n\n:param image_url: the url of the image to resize\n\n:param width: the width of the new image\n\n:param height: the height of the new image\n\n:param image_format: the format of the resized image. Defaults to the format of the source image\n\n:param scale_type: controls how the image should be resized to match\nthe requested width and height. Ignored if either width or height are not provided.\n\n:param user_agent: the User-Agent header value to pass to the request to get the image\n\n:return: a Response containing the new image","operationId":"resize_resize_get","parameters":[{"required":true,"schema":{"title":"Image Url","type":"string"},"name":"image_url","in":"query"},{"required":false,"schema":{"title":"Width","exclusiveMaximum":1024.0,"exclusiveMinimum":0.0,"type":"integer"},"name":"width","in":"query"},{"required":false,"schema":{"title":"Height","exclusiveMaximum":1024.0,"exclusiveMinimum":0.0,"type":"integer"},"name":"height","in":"query"},{"required":false,"schema":{"$ref":"#/components/schemas/ImageFormat"},"name":"image_format","in":"query"},{"required":false,"schema":{"allOf":[{"$ref":"#/components/schemas/ScaleType"}],"default":"fit_xy"},"name":"scale_type","in":"query"},{"required":false,"schema":{"title":"User Agent","type":"string","default":"image-resizer"},"name":"user_agent","in":"query"}],"responses":{"200":{"description":"Successful Response","content":{"application/json":{"schema":{}},"image/png":{},"image/gif":{},"image/jpeg":{},"image/tiff":{},"image/webp":{},"application/pdf":{}}},"400":{"description":"Invalid request parameters"},"422":{"description":"The request parameters were understood, but could not be processed"}}}}},"components":{"schemas":{"ImageFormat":{"title":"ImageFormat","enum":["bmp","gif","jpeg","pdf","png","tiff","webp"],"type":"string","description":"Supported image formats"},"ScaleType":{"title":"ScaleType","enum":["fit_xy","fit_preserve_aspect_ratio","crop"],"type":"string","description":"Supported scale types"}}}}